{
  "name": "better-react-swiper",
  "version": "1.0.0",
  "description": "Lightweight and simple React swiper component",
  "repository": {
    "type": "git",
    "url": "https://github.com/veksen/better-react-swiper.git"
  },
  "author": {
    "name": "Jean-Philippe Sirois",
    "email": "jp@veksen.net"
  },
  "main": "dist/index.js",
  "module": "dist/better-react-swiper.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "analyze": "size-limit --why",
    "build": "tsdx build",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "start": "tsdx watch",
    "test": "tsdx test --passWithNoTests",
    "test:check-coverage": "yarn test --coverage && codecov",
    "preversion": "yarn build --production",
    "postversion": "git push && git push --tags"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "dependencies": {
    "react-resize-detector": "^7.0.0",
    "react-swipeable": "^5.5.1",
    "styled-components": "^5.0.1"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^7.0.8",
    "@testing-library/react": "^9.5.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@types/react-resize-detector": "^4.2.0",
    "@types/react-swipeable": "^5.2.0",
    "@types/styled-components": "^5.0.1",
    "husky": "^7.0.4",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "size-limit": "^7.0.8",
    "tsdx": "^0.14.1",
    "tslib": "^2.3.1",
    "typescript": "^4.6.3"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "engines": {
    "node": ">=10"
  },
  "size-limit": [
    {
      "path": "dist/better-react-swiper.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/better-react-swiper.esm.js",
      "limit": "10 KB"
    }
  ]
}
